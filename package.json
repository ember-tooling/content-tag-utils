{
  "name": "content-tag-utils",
  "version": "0.3.1",
  "description": "utilities for working with content-tag: transforming, working with line/column information, etc",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NullVoxPopuli/content-tag-utils.git"
  },
  "type": "module",
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "import": "./src/index.js"
    }
  },
  "files": [
    "src"
  ],
  "scripts": {
    "format": "prettier . --write",
    "lint": "concurrently \"pnpm:lint:*(!fix)\" --names \"lint:\"",
    "lint:package": "pnpm publint --pack pnpm",
    "lint:published-types": "pnpm attw . --pack --profile esm-only",
    "lint:types": "tsc --noEmit",
    "test": "vitest"
  },
  "dependencies": {
    "content-tag": "^3.1.2"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.3",
    "@tsconfig/node22": "^22.0.0",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^22.10.7",
    "concurrently": "^9.1.2",
    "prettier": "^3.4.2",
    "publint": "^0.3.2",
    "release-plan": "^0.11.0",
    "typescript": "^5.7.3",
    "vitest": "^3.0.3"
  },
  "packageManager": "pnpm@10.0.0",
  "engines": {
    "node": ">= 18"
  }
}
